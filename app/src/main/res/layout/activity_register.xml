<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fullscreenConstraintLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity">

    <View
        android:id="@+id/topRoundView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="-70dp"
        android:layout_marginEnd="-0dp"
        android:background="@drawable/arc"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/backImageButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:tint="@android:color/white"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/big_big_margin"
        android:layout_marginStart="@dimen/big_big_margin"
        android:text="Datos"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/topRoundView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        android:layout_marginStart="@dimen/big_big_margin"
        android:layout_marginEnd="@dimen/big_big_margin"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginBottom="@dimen/big_big_big_margin">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarFadeDuration="0"
            android:layout_marginBottom="@dimen/big_big_margin"
            android:layout_marginTop="@dimen/big_margin">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.libizo.CustomEditText
                    android:id="@+id/usernameCustomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_big_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/big_big_margin"
                    android:drawableStart="@drawable/ic_person"
                    android:hint="Nombre de usuario (unico)"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:libIZO_setBackgroundColor="@android:color/white"
                    app:libIZO_setBorderColor="@android:color/darker_gray"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="@dimen/default_margin" />

                <com.libizo.CustomEditText
                    android:id="@+id/passwordCustomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_big_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/big_big_margin"
                    android:drawableStart="@drawable/ic_lock"
                    android:hint="@string/password"
                    android:text=""
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/usernameCustomEditText"
                    app:libIZO_setBackgroundColor="@android:color/white"
                    app:libIZO_setBorderColor="@android:color/darker_gray"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="@dimen/default_margin" />

                <com.libizo.CustomEditText
                    android:id="@+id/nameCustomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_big_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/big_big_margin"
                    android:drawableStart="@drawable/ic_person"
                    android:hint="Nombre"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/passwordCustomEditText"
                    app:libIZO_setBackgroundColor="@android:color/white"
                    app:libIZO_setBorderColor="@android:color/darker_gray"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="@dimen/default_margin" />

                <com.libizo.CustomEditText
                    android:id="@+id/lastNameCustomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_big_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/big_big_margin"
                    android:drawableStart="@drawable/ic_person"
                    android:hint="Apellidos"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nameCustomEditText"
                    app:libIZO_setBackgroundColor="@android:color/white"
                    app:libIZO_setBorderColor="@android:color/darker_gray"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="@dimen/default_margin" />

                <RadioGroup
                    android:id="@+id/genderRadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/big_big_margin"
                    android:layout_marginEnd="@dimen/big_big_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lastNameCustomEditText"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/maleAppCompatRadioButton"
                        android:text="Masculino"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/femaleAppCompatRadioButton"
                        android:text="Femenino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/big_margin"/>

                </RadioGroup>

                <com.libizo.CustomEditText
                    android:id="@+id/dniCustomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_big_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/big_big_margin"
                    android:drawableStart="@drawable/ic_dni"
                    android:hint="DNI"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/genderRadioGroup"
                    app:libIZO_setBackgroundColor="@android:color/white"
                    app:libIZO_setBorderColor="@android:color/darker_gray"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="@dimen/default_margin" />

                <com.libizo.CustomEditText
                    android:id="@+id/nationalityCustomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_big_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/big_big_margin"
                    android:drawableStart="@drawable/ic_flag"
                    android:hint="Nacionalidad"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dniCustomEditText"
                    app:libIZO_setBackgroundColor="@android:color/white"
                    app:libIZO_setBorderColor="@android:color/darker_gray"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="@dimen/default_margin" />

                <com.libizo.CustomEditText
                    android:id="@+id/birthDayCustomEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_big_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:drawableStart="@drawable/ic_today"
                    android:hint="Dia"
                    android:maxLength="2"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text=""
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/birthMonthCustomEditText"
                    app:layout_constraintTop_toBottomOf="@id/birthPlaceCustomEditText"
                    app:libIZO_setBackgroundColor="@android:color/white"
                    app:libIZO_setBorderColor="@android:color/darker_gray"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="@dimen/default_margin" />

                <com.libizo.CustomEditText
                    android:id="@+id/birthMonthCustomEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:drawableStart="@drawable/ic_today"
                    android:hint="Mes (Número)"
                    android:maxLength="2"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text=""
                    app:layout_constraintStart_toEndOf="@id/birthDayCustomEditText"
                    app:layout_constraintEnd_toStartOf="@id/birthYearCustomEditText"
                    app:layout_constraintTop_toBottomOf="@id/birthPlaceCustomEditText"
                    app:libIZO_setBackgroundColor="@android:color/white"
                    app:libIZO_setBorderColor="@android:color/darker_gray"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="@dimen/default_margin" />

                <com.libizo.CustomEditText
                    android:id="@+id/birthYearCustomEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/big_big_margin"
                    android:drawableStart="@drawable/ic_today"
                    android:hint="Año"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLength="4"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text=""
                    app:layout_constraintStart_toEndOf="@id/birthMonthCustomEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/birthPlaceCustomEditText"
                    app:libIZO_setBackgroundColor="@android:color/white"
                    app:libIZO_setBorderColor="@android:color/darker_gray"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="@dimen/default_margin" />

                <com.libizo.CustomEditText
                    android:id="@+id/birthPlaceCustomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_big_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/big_big_margin"
                    android:drawableStart="@drawable/ic_edit_location"
                    android:hint="Lugar de nacimiento ejem: Lima"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nationalityCustomEditText"
                    app:libIZO_setBackgroundColor="@android:color/white"
                    app:libIZO_setBorderColor="@android:color/darker_gray"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="@dimen/default_margin" />

                <com.libizo.CustomEditText
                    android:id="@+id/emailCustomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_big_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/big_big_margin"
                    android:layout_marginBottom="@dimen/big_margin"
                    android:drawableStart="@drawable/ic_email"
                    android:hint="Email"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/birthYearCustomEditText"
                    app:libIZO_setBackgroundColor="@android:color/white"
                    app:libIZO_setBorderColor="@android:color/darker_gray"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="@dimen/default_margin" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/insuranceTypeCardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_big_margin"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/big_big_margin"
                    android:layout_marginBottom="@dimen/big_margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="@dimen/default_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/emailCustomEditText"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/insuranceTypeMaterialSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        app:ms_arrow_tint="@android:color/white"
                        app:ms_background_color="@color/colorAccent"
                        app:ms_text_color="@android:color/white"  />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/registerCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_big_big_margin"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_big_big_margin"
        android:layout_marginBottom="@dimen/big_big_margin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ProgressBar
            android:id="@+id/registerProgressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminate="true"
            android:theme="@style/ProgressBarStyleWhite"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/registerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_marginBottom="@dimen/big_margin"
            android:text="@string/register"
            android:textColor="@android:color/white" />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/arc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>